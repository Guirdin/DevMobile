<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@drawable/fond_gris"
    android:orientation="vertical"
    tools:context=".MorpionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/fond_gris"
        android:orientation="vertical"
        tools:context=".MorpionActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/articlecolor"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Morpion"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="?attr/colorBackgroundFloating"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_alignParentTop="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/auTourDe"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="Welcome in the game"
                android:textSize="20sp"
                android:layout_alignParentBottom="true"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="90">

            <Button
                android:id="@+id/button1"
                android:layout_width="@android:dimen/app_icon_size"
                android:layout_height="@dimen/btn100"
                android:layout_weight="30" />

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <Button
                android:id="@+id/button2"
                android:layout_width="@android:dimen/app_icon_size"
                android:layout_height="@dimen/btn100"
                android:layout_weight="30" />

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <Button
                android:id="@+id/button3"
                android:layout_width="@android:dimen/app_icon_size"
                android:layout_height="@dimen/btn100"
                android:layout_weight="30" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/black">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="90">

            <Button
                android:id="@+id/button4"
                android:layout_width="@android:dimen/app_icon_size"
                android:layout_height="@dimen/btn100"
                android:layout_weight="30" />

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <Button

                android:id="@+id/button5"
                android:layout_width="@android:dimen/app_icon_size"
                android:layout_height="@dimen/btn100"
                android:layout_weight="30" />

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <Button
                android:id="@+id/button6"
                android:layout_width="@android:dimen/app_icon_size"
                android:layout_height="@dimen/btn100"
                android:layout_weight="30" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/black">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="90">

            <Button
                android:id="@+id/button7"
                android:layout_width="@android:dimen/app_icon_size"
                android:layout_height="@dimen/btn100"
                android:layout_weight="30" />

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <Button
                android:id="@+id/button8"
                android:layout_width="@android:dimen/app_icon_size"
                android:layout_height="@dimen/btn100"
                android:layout_weight="30" />

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <Button
                android:id="@+id/button9"
                android:layout_width="@android:dimen/app_icon_size"
                android:layout_height="@dimen/btn100"
                android:layout_weight="30" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="313dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingBottom="20dp">

            <Button
                android:id="@+id/boutonRetour"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@color/gray"
                android:text="Back to menu"
                android:textColor="?attr/colorBackgroundFloating"
                android:visibility="invisible" />

            <Button
                android:id="@+id/boutonRelancer"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@color/articlecolor"
                android:text="Restart game"
                android:textColor="?attr/colorBackgroundFloating"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>